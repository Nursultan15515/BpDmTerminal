@model string
@{
    ViewBag.Title = "Сделать фото";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .photo-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 80px;
        /*padding-top: 5px;*/
        color: white;
    }

    .frame-block {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .frame-block h3 {
            margin-bottom: 15px;
            font-size: 22px;
        }

    video, canvas {
        border: 5px solid #00cc66;
        border-radius: 10px;
        width: 480px;
        height: 640px;
        background-color: black;
        object-fit: cover;
    }

    .capture-button, .done-button {
        margin-top: 20px;
        padding: 14px 40px;
        border: none;
        border-radius: 8px;
        font-size: 22px;
        cursor: pointer;
    }

    .capture-button {
        background-color: #00cc66;
        color: white;
    }

    .done-button {
        background-color: #0059b3;
        color: white;
    }
</style>

<!-- Оборачиваем всё в форму -->
<form method="post" action="@Url.Action("SavePhoto", "Home")">
    <input type="hidden" name="passCardVisitorId" value="@ViewBag.PassCardVisitorId" />
    <input type="hidden" name="base64photo" id="base64photo" />

    <p style="font-size: 18px; line-height: 1.4; margin-top: 80px;">
        @BpDmTerminal.Resources.Messages.PhotoInfo1<br />
        @BpDmTerminal.Resources.Messages.PhotoInfo2.<br />
        @BpDmTerminal.Resources.Messages.PhotoInfo3.
    </p>

    <div class="photo-container">
        <!-- Камера -->
        <div class="frame-block">
            <h3>@BpDmTerminal.Resources.Messages.Camera</h3>
            <video id="video" autoplay playsinline></video>
            <button type="button" class="capture-button" onclick="capturePhoto()">@BpDmTerminal.Resources.Messages.TakePhoto</button>
        </div>

        <!-- Снимок -->
        <div class="frame-block">
            <h3>@BpDmTerminal.Resources.Messages.Photo</h3>
            <canvas id="canvas" width="480" height="640"></canvas>
            <button type="submit" id="saveButton" class="done-button" style="display:none;" onclick="preparePhoto()">
                @BpDmTerminal.Resources.Messages.SavePhotoAndGetCard
            </button>
        </div>
    </div>
</form>

@section scripts {
    <script>
        const video = document.getElementById('video');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');

        navigator.mediaDevices.getUserMedia({ video: { width: 480, height: 640 } })
            .then(stream => {
                video.srcObject = stream;
            })
            .catch(err => alert("Камера недоступна: " + err));

        function capturePhoto() {
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            ctx.drawImage(video, 0, 0, canvas.width, canvas.height);

            document.getElementById('saveButton').style.display = 'inline-block';
        }

        function preparePhoto() {
            const imageData = canvas.toDataURL("image/jpeg");
            // Убираем "data:image/jpeg;base64,"
            const cleanBase64 = imageData.replace(/^data:image\/jpeg;base64,/, "");
            document.getElementById("base64photo").value = cleanBase64;
        }
    </script>
}
